root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[*.{js,json,yml}]
indent_style = space
indent_size = 2

[*.{scss,sass,css}]
indent_style = space
indent_size = 2

[{Movefile,.eslintrc}]
indent_style = space
indent_size = 2
